@charset "utf-8";
body{
	margin: auto;
	background: #f1edec;
}
.container-fluid{
	min-height: 30em;
	background: #f1edec;
}
dt.panel-title{
	padding: 0.25rem 0.4rem;
	font-size: 1.3rem;
	font-weight: normal;
	border-bottom: 1px solid #d4d4d4;
	background: #f1edec;
}
dt.panel-title>span.pull-left, dt.panel-title>span.pull-right>span.text-red{
	margin-top: 0.2rem;
	display: block;
	height: 3rem;
	line-height: 3rem;
}
.pull-left{
	float: left;
}
.pull-right{
	float: right;
}
dt.panel-title>span>a.button{
	margin-top: 0.08rem;
	display: inline-block;
	/* margin-left: 0.1rem; */
	padding-left: 0.1rem;
	padding-right: 0.1rem;
	border-radius: 3px;
	background: #f76300;
	color: #fff;
	height: 3rem;
	line-height: 3rem;
}
dd.panel-body{
	padding: 0.358rem 0.375rem;
	position: relative;
}
dd.panel-body>.list-box{
	color: #ccc;
	display: box;
	display: -webkit-box;
	display: -moz-box;
}
dd.panel-body>.list-box span.img{
	width: 7.55rem;
	height: 4.8rem;
	margin-top: 3px;
	overflow: hidden;
}
dd.panel-body>.list-box>span{
	display: block;
}
dd.panel-body>.list-box span.img img{
	width: 7.55rem;
	height: 4.8rem;
}
dd.panel-body>.list-box>span.text{
	margin: 0 1.248rem;
	-moz-box-flex: 1;
	-webkit-box-flex: 1;
	box-flex:1;
}
dd.panel-body>.list-box>span.text>p.title{
	font-size: 1.375rem;
}
dd.panel-body>.list-box>span.text>p{
	margin: 0;
	margin-bottom: 0.2rem;
	position: relative;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	word-break: break-all;
	color: #000;
}
.text-black{
	color: #000;
}
.text-red{
	color: #f00;
}
dd.panel-body>.list-box>span.text>p:last-child{
	margin-bottom: 0;
}
dd.panel-body>.list-box>span.text>p>span{
	margin: 0 3px;
}
footer {
	padding-top: 2.7rem;
	background: #f1edec;
}

footer img {
	width: 100%;
	height: 8rem;
}